@using CIS_174_Project.Models.Olympics;
@model CountriesViewModel
@{
    Layout = "~/Views/Shared/_LayoutOlympics.cshtml";
    ViewData["Title"] = "Country Details";
}

<h2 class="text-center p-2">Country Details</h2>

<div class="row">
    <div class="col">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="/images/olympics/@Model.Country.CountryFlag" alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Sport Type: @Model.Country.SportType?.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Game Type: @Model.Country.GameType?.Name</h4>
            </li>
            <li class="list-group-item">
                <form method="post" asp-action="Add" asp-controller="Favorites">
                    <a asp-action="Countries" class="btn btn-primary" asp-route-activeSportType="@Model.ActiveSportType" asp-route-activeGameType="@Model.ActiveGameType">Return to Home Page</a>
                    <button type="submit" class="btn btn-primary">Add to Favorites</button>
                    <input type="hidden" asp-for="@Model.Country.CountryID" />
                </form>
            </li>
        </ul>
    </div>
</div>
